@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Header{
<link rel="stylesheet" href="~/lib/choices/choices.min.css" />
}

<div class="row justify-content-center">
    <div class="col-8">
        <form>
            <div class="row mb-3">
                <label for="project" class="col-sm-2 col-form-label">项目名称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="project">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">料号种类</label>
                <div class="col-sm-10">
                    <select id="categories">
                        <option>选择料号种类</option>
                        @if (Model.categories != null)
                        {
                            @foreach (var category in Model.categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="project" class="col-sm-2 col-form-label">描述</label>

                <div class="col-sm-10">
                    <textarea id="description" rows="2" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="button" class="btn btn-primary" id="startBtn">Start</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
<script src="~/lib/choices/choices.min.js"></script>

<script src="~/js/index.js"></script>

}

